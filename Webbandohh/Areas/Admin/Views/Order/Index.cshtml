@using Webbandohh.Models
@model PagedList.IPagedList<OrderDetail>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Order";

}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý Order</h1>
    </div>
</div>

<div class="row">
    @using (Html.BeginForm("Index", "Item", FormMethod.Get))
    {
        <div class="col-md-3" style="margin-bottom:0.5%;float:right">
            <div class="input-group custom-search-form">
                <input type="text" class="form-control" name="search" placeholder="Search...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </div>
    }

</div>

<div class="row" id="table">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Khach Hang</th>
                                <th>Order Date</th>
                                <th>Item</th>
                                <th>Category</th>
                                <th>Creator</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Order.User.UserName</td>
                                    <td>@item.Order.OrderDate</td>
                                    <td>@item.Item.Title</td>
                                    <td>@item.Item.Category.CateName</td>
                                    <td>@item.Item.Creator.CreatorName</td>
                                    <td>@item.Quantity</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <div style="text-align:center">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @search = @ViewBag.Search }))
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>

